<!-- 檔案: Views/LoginWindow.xaml -->
<Window x:Class="collect_all.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:collect_all.ViewModels"
        xmlns:controls="clr-namespace:collect_all.Controls"
        Title="登入" Height="280" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="帳號：" Margin="0,5,0,2"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     IsReadOnly="{Binding IsUsernameReadOnly}"
                     Height="30"/>

            <TextBlock Text="密碼：" Margin="0,10,0,2"/>
            <controls:BindablePasswordBox 
                Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" 
                Height="30"/>

            <Button Content="登入" Height="35" Margin="0,20,0,0" Command="{Binding LoginCommand}"/>
        </StackPanel>
    </Grid>
</Window>