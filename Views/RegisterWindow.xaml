<Window x:Class="collect_all.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="註冊" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="帳號：" Margin="0,5,0,2"/>
            <TextBox x:Name="UsernameBox" Height="30"/>

            <TextBlock Text="密碼：" Margin="0,10,0,2"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <TextBlock Text="確認密碼：" Margin="0,10,0,2"/>
            <PasswordBox x:Name="ConfirmBox" Height="30"/>

            <Button Content="註冊" Height="35" Margin="0,15,0,0" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
