<Window x:Class="collect_all.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:collect_all.ViewModels"
        xmlns:controls="clr-namespace:collect_all.Controls" 
        Title="註冊" Height="320" Width="400">

    <Window.DataContext>
        <vm:RegisterViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="帳號：" Margin="0,5,0,2"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Height="30"/>

            <TextBlock Text="密碼：" Margin="0,10,0,2"/>
            <controls:BindablePasswordBox 
                Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" 
                Height="30"/>
            <TextBlock Text="確認密碼：" Margin="0,10,0,2"/>
            <controls:BindablePasswordBox 
                Password="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}" 
                Height="30"/>
            <Button Content="註冊" Height="35" Margin="0,20,0,0" Command="{Binding RegisterCommand}"/>
        </StackPanel>
    </Grid>
</Window>