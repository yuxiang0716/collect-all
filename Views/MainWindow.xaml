<Window x:Class="collect_all.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:collect_all.ViewModels"
        Title="鴻盛資訊維護服務識別器" Height="400" Width="700">
    <!-- DataContext is set in App.xaml.cs to avoid duplicate viewmodels -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding UserIdentifierText}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="DodgerBlue"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">

                <!-- 註冊按鈕已移除 -->
                <Button Content="登入" Width="80" Margin="5,0,5,0" Command="{Binding LoginCommand}"/>
            </StackPanel>
        </Grid>

        <TabControl Grid.Row="1" FontSize="15" >
            <TabItem Header="系統基本資訊">
                <DataGrid ItemsSource="{Binding SystemInfoItems}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="項目" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="數值" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="核心硬體規格">
                <DataGrid ItemsSource="{Binding HardwareItems}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="項目" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="數值" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="顯示與儲存">
                <DataGrid ItemsSource="{Binding StorageVgaItems}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="項目" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="數值" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

<TabItem Header="即時監控與診斷">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                        <Button Content="立即刷新" Width="100" Height="30" Margin="0,5,0,5" Command="{Binding RefreshCommand}"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        
                        <StackPanel>
                            
                            <DataGrid ItemsSource="{Binding UsageItems}" AutoGenerateColumns="False" IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="設備" Binding="{Binding Name}" Width="350"/>
                                    <DataGridTextColumn Header="使用率" Binding="{Binding Value}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <DataGrid ItemsSource="{Binding TemperatureItems}" AutoGenerateColumns="False" IsReadOnly="True" 
                                      Margin="0,5,0,0"
                                      CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="設備/感應器" Binding="{Binding Name}" Width="350"/>
                                    <DataGridTextColumn Header="溫度" Binding="{Binding Value}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <DataGrid ItemsSource="{Binding SmartItems}" AutoGenerateColumns="False" IsReadOnly="True" 
                                      Margin="0,5,0,0"
                                      CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="硬碟名稱" Binding="{Binding Name}" Width="250"/>
                                    <DataGridTextColumn Header="S.M.A.R.T. 參數" Binding="{Binding Value}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="設定">
                <StackPanel Margin="15">
                    <CheckBox Content="開機時自動啟動本程式"
                              FontSize="16"
                              IsChecked="{Binding IsStartupSet, Mode=TwoWay}" />
                    <TextBlock Margin="20,5,0,0" Foreground="Gray"/>
                    <Button Content="顯示已安裝軟體"
                            Command="{Binding ShowSoftwareInfoCommand}"
                            Margin="0,20,0,0"
                            Padding="10,5"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,5,0,5">
            <TextBlock Text="報修專線：(02)8258-8000" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
            <TextBlock Text="官方網站：www.mis-hs.com" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>