<Window x:Class="collect_all.Views.SoftwareInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:collect_all.ViewModels"
        Title="已安裝的軟體資訊" Height="600" Width="900">
    <Window.DataContext>
        <vm:SoftwareInfoViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding SoftwareCount}" Grid.Row="0" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <DataGrid ItemsSource="{Binding InstalledSoftware}" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="編號" Binding="{Binding Number}" Width="60"/>
                <DataGridTextColumn Header="名稱" Binding="{Binding DisplayName}" Width="2*"/>
                <DataGridTextColumn Header="發行者" Binding="{Binding Publisher}" Width="*"/>
                <DataGridTextColumn Header="安裝日期" Binding="{Binding InstallDate}" Width="110"/>
                <DataGridTextColumn Header="版本" Binding="{Binding DisplayVersion}" Width="110"/>
                <DataGridTextColumn Header="日期" Binding="{Binding LastUpdate}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>