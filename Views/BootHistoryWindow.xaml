<Window x:Class="collect_all.Views.BootHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="30日內開關機紀錄" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <ListView x:Name="BootEventsListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="事件類型" Width="150"
                                    DisplayMemberBinding="{Binding EventType}" />
                    
                    <GridViewColumn Header="時間" Width="300"
                                    DisplayMemberBinding="{Binding Time, StringFormat='yyyy-MM-dd HH:mm:ss'}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>