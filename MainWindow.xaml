<Window x:Class="collect_all.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="系統資訊收集器" Height="700" Width="1000">
    <Grid Margin="10">
        <TabControl>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
                <Button Content="註冊" Width="80" Margin="5" Click="Register_Click"/>
                <Button Content="登入" Width="80" Margin="5" Click="Login_Click"/>
            </StackPanel>


            <TabItem Header="系統基本資訊">
                <DataGrid ItemsSource="{Binding SystemInfoItems}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="項目" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="數值" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="核心硬體規格">
                <DataGrid ItemsSource="{Binding HardwareItems}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="項目" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="數值" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="顯示與儲存">
                <DataGrid ItemsSource="{Binding StorageVgaItems}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="項目" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="數值" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="即時監控與診斷">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                        <Button Content="立即刷新" Width="100" Height="30" Margin="0,5,0,5" Click="RefreshButton_Click"/>
                    </StackPanel>


                    <DataGrid Grid.Row="1" ItemsSource="{Binding TemperatureItems}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="設備/感應器" Binding="{Binding Name}" Width="350"/>
                            <DataGridTextColumn Header="溫度" Binding="{Binding Value}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid Grid.Row="2" ItemsSource="{Binding SmartItems}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="硬碟名稱" Binding="{Binding Name}" Width="250"/>
                            <DataGridTextColumn Header="S.M.A.R.T. 參數" Binding="{Binding Value}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="設定">
                <StackPanel Margin="15">
                    <CheckBox x:Name="StartupCheckBox" 
                              Content="開機時自動啟動本程式"
                              FontSize="16"
                              Checked="StartupCheckBox_Changed"
                              Unchecked="StartupCheckBox_Changed" />
                    <TextBlock Margin="20,5,0,0" Foreground="Gray">
                        
                    </TextBlock>
                </StackPanel>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
