<Window x:Class="collect_all.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登入" Height="250" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="帳號：" Margin="0,5,0,2"/>
            <TextBox x:Name="UsernameBox" Height="30"/>

            <TextBlock Text="密碼：" Margin="0,10,0,2"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <Button Content="登入" Height="35" Margin="0,15,0,0" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Window>
